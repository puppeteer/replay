  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "outDir": "lib",
    "moduleResolution": "Node",
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["src/cli.ts", "src/CLIUtils.ts"]
}
