{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "Node",
    "stripInternal": true
  },
  "include": ["src/**/*"]
}
